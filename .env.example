PORT=3000
NODE_ENV=development

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# S3 Configuration
S3_BUCKET_NAME=video-uploads-bucket
S3_OUTPUT_BUCKET_NAME=video-processed-bucket

# MediaConvert Configuration
MEDIACONVERT_ENDPOINT=https://your-mediaconvert-endpoint.amazonaws.com
MEDIACONVERT_ROLE_ARN=arn:aws:iam::account-id:role/MediaConvertRole
MEDIACONVERT_QUEUE_ARN=arn:aws:mediaconvert:region:account-id:queues/Default

# CloudFront Configuration
CLOUDFRONT_DOMAIN=your-cloudfront-distribution.cloudfront.net
CLOUDFRONT_KEY_PAIR_ID=your-cloudfront-key-pair-id
CLOUDFRONT_PRIVATE_KEY_PATH=./keys/cloudfront-private-key.pem

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRY=24h

# Security
SIGNED_URL_EXPIRY=3600

# Database
DATABASE_PATH=./data/videos.db
