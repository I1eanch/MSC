{
  "info": {
    "name": "Video Infrastructure API",
    "description": "Complete API collection for video upload, transcoding, and streaming",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "videoId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"trainer1\",\n  \"email\": \"trainer@example.com\",\n  \"password\": \"securePassword123\",\n  \"role\": \"trainer\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"token\", jsonData.token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"trainer@example.com\",\n  \"password\": \"securePassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Videos",
      "item": [
        {
          "name": "Upload Video",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", function () {",
                  "    pm.response.to.have.status(201);",
                  "});",
                  "",
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"videoId\", jsonData.videoId);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "video",
                  "type": "file",
                  "src": "/path/to/video.mp4"
                },
                {
                  "key": "title",
                  "value": "Training Session 1",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Basic training techniques",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/videos/upload",
              "host": ["{{baseUrl}}"],
              "path": ["api", "videos", "upload"]
            }
          }
        },
        {
          "name": "List Videos",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/videos?limit=10&offset=0",
              "host": ["{{baseUrl}}"],
              "path": ["api", "videos"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "offset",
                  "value": "0"
                },
                {
                  "key": "status",
                  "value": "completed",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Video Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/videos/{{videoId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "videos", "{{videoId}}"]
            }
          }
        },
        {
          "name": "Get Signed URL",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/videos/{{videoId}}/signed-url?format=hls&resolution=1080p",
              "host": ["{{baseUrl}}"],
              "path": ["api", "videos", "{{videoId}}", "signed-url"],
              "query": [
                {
                  "key": "format",
                  "value": "hls"
                },
                {
                  "key": "resolution",
                  "value": "1080p"
                }
              ]
            }
          }
        },
        {
          "name": "Get Transcoding Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/videos/{{videoId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "videos", "{{videoId}}", "status"]
            }
          }
        },
        {
          "name": "Delete Video",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/videos/{{videoId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "videos", "{{videoId}}"]
            }
          }
        }
      ]
    }
  ]
}
