{
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/tests/**",
    "!src/server.js"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "testMatch": [
    "**/src/tests/**/*.test.js"
  ],
  "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.js"],
  "verbose": true
}