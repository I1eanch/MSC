{
  "$schema": "https://turbo.build/json-schema.json",
  "globalDependencies": ["**/.env.local", "**/.env"],
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"]
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "format": {
      "cache": false
    },
    "format:check": {
      "cache": false
    },
    "typecheck": {
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
